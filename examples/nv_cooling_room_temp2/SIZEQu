c     Dimension file to be included     
                                        
c     Arrays for Quantum Model calculations
      integer    maxTimeSteps,maxN,maxOp,maxE,lp,nid,larnol 
      parameter (maxTimeSteps = 30000) ! Max number of time steps
      parameter (maxN    = 1400 )       ! Max Hilbert space size 
      parameter (maxOp   = 80  )       ! Max number of operators
      parameter (maxE    = 1 )       ! Max number of energy slices
      parameter (lp      = 64  )       ! Max number of processors
      parameter (larnol = 1  )        ! Max arnoldi subspace size for exponential timestepping
      COMMON /DIMN/
     $           NID

